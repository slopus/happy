FROM node:20-slim

# Install system dependencies and GitHub CLI
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      curl git ca-certificates && \
    curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg \
      -o /usr/share/keyrings/githubcli-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" \
      > /etc/apt/sources.list.d/github-cli.list && \
    apt-get update && \
    apt-get install -y gh && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install global packages
RUN npm install -g happy-coder @anthropic-ai/claude-code

# Create non-root user
RUN useradd -m -s /bin/bash happy-coder

# Setup working directory structure
RUN mkdir -p /home/happy-coder/.happy \
             /home/happy-coder/.config/gh \
             /home/happy-coder/.config/git \
             /home/happy-coder/.claude \
             /prj && \
    chown -R happy-coder:happy-coder /home/happy-coder && \
    chmod -R 777 /home/happy-coder

# Set environment variables
ENV HOME=/home/happy-coder
ENV XDG_CONFIG_HOME=/home/happy-coder/.config

# Setup working directory
WORKDIR /prj

# Switch to non-root user
USER happy-coder
