# =============================================================================
# Happy Coder - Docker Compose Environment Variables Settings
# =============================================================================
# Copy this file to .env for use:
#   cp .env.example .env
# =============================================================================

# --- PostgreSQL ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=handy
POSTGRES_PORT=5432

# --- Redis ---
REDIS_PORT=6379

# --- MinIO (S3 Compatible Storage) ---
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=happy
S3_PUBLIC_URL=http://localhost:9000/happy
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# --- Server ---
SERVER_PORT=3000
HANDY_MASTER_SECRET=change-me-in-production-use-a-long-random-string

# --- WebApp ---
WEBAPP_PORT=80

# --- CLI ---
CLI_PORT=3005

