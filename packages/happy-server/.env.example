# Happy Server Environment Variables
# Copy this file to .env and fill in your values

# --- Required ---
DATABASE_URL=postgresql://user:password@localhost:5432/happy
HANDY_MASTER_SECRET=generate-a-secure-random-string
REDIS_URL=redis://localhost:6379

# --- S3/Object Storage ---
S3_HOST=localhost
S3_PORT=9000
S3_USE_SSL=false
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=happy
S3_PUBLIC_URL=http://localhost:9000/happy

# --- Server ---
PORT=3005
NODE_ENV=development

# --- Metrics (Optional) ---
METRICS_ENABLED=true
METRICS_PORT=9090

# --- Voice Feature (ElevenLabs) ---
# Required for voice conversations
# 1. Get API key from https://elevenlabs.io/app/settings/api-keys
# 2. Create an agent at https://elevenlabs.io/app/conversational-ai/agents
# See docs/voice.md for full setup instructions
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# --- GitHub Integration (Optional) ---
# For GitHub OAuth and App integration
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_APP_ID=
# GITHUB_PRIVATE_KEY=
# GITHUB_WEBHOOK_SECRET=
# GITHUB_REDIRECT_URL=
# GITHUB_REDIRECT_URI=

# --- Debug (Optional) ---
# Enable file logging for debugging
# DANGEROUSLY_LOG_TO_SERVER_FOR_AI_AUTO_DEBUGGING=true

